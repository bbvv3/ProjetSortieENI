<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@1,400;1,600&family=Hind+Siliguri&display=swap" rel="stylesheet">
    <title>{% block title %}Bienvenue !{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('style/style.css') }}">
</head>
<body>
    <header>
        <div id="titreSite" class="d-flex justify-content-between align-items-center py-5 px-5">
            <a id="lienLogo"  class="col-3" href="{{ path('app_home') }}"><h1>Logo Sortir.com</h1></a>
            {% if app.user %}
                {% include 'nav/nav.html.twig' %}
            {% endif %}
        </div>
    </header>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="px-4 mx-5 flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    <main>
        {% block body %}
        {% endblock %}
    </main>
</body>
