{% extends 'base.html.twig' %}

{% block title %}
Mon Profil
{% endblock %}

{% block body %}
    <div>
<h1 class="text-center">Mon profil</h1>
    <div id="formprofil" class="d-flex justify-content-center align-self-center my-4 ">

  {{ form_start(monProfilForm,{'attr':{'class':'col-4'}}) }}
        <div class="d-flex flex-wrap py-2">
            {{ form_label(monProfilForm.pseudo) }}
            {{ form_widget(monProfilForm.pseudo) }}
            <div class="error">
                {{ form_errors(monProfilForm.pseudo) }}
            </div>
        </div>
        <div class="d-flex flex-wrap py-2">
            {{ form_label(monProfilForm.prenom) }}
            {{ form_widget(monProfilForm.prenom) }}
            <div class="error">
                {{ form_errors(monProfilForm.prenom) }}
            </div>
        </div>
        <div class="d-flex flex-wrap py-2">
            {{ form_label(monProfilForm.nom) }}
            {{ form_widget(monProfilForm.nom) }}
            <div class="error">
                {{ form_errors(monProfilForm.nom) }}
            </div>
        </div>
        <div class="d-flex flex-wrap py-2">
            {{ form_label(monProfilForm.telephone) }}
            {{ form_widget(monProfilForm.telephone) }}
            <div class="error">
                {{ form_errors(monProfilForm.telephone) }}
            </div>
        </div>
        <div class="d-flex flex-wrap py-2">
            {{ form_label(monProfilForm.mail) }}
            {{ form_widget(monProfilForm.mail) }}
            <div class="error">
                {{ form_errors(monProfilForm.mail) }}
            </div>
        </div>
        <div class="d-flex flex-wrap">
            {{ form_label(monProfilForm.motPasse) }}
            {{ form_widget(monProfilForm.motPasse) }}
            <div class="error">
                {{ form_errors(monProfilForm.motPasse) }}
            </div>
        </div>
        <div class="d-flex flex-wrap py-2">
            {{ form_label(monProfilForm.campus) }}
            {{ form_widget(monProfilForm.campus) }}
            <div class="error">
                {{ form_errors(monProfilForm.campus) }}
            </div>
        </div>
        <div class="d-flex justify-content-evenly py-5 ">
            <button class="btn btn-primary btn-lg " type="submit">Enregistrer</button>
            <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">Annuler</a>
        </div>
        {{ form_end(monProfilForm) }}

    </div>
    </div>
{% endblock %}



