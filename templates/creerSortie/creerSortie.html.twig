{% extends 'base.html.twig' %}

{% block title %}
    {% if id==(0) %}Créer {% else %}Modifier{% endif%} Sortie
{% endblock %}

{% block body %}

    <h2 class="text-center"> {% if id==(0) %}Créer {% else %}Modifier{% endif%} une sortie</h2>

    {{ form_start(sortieForm,{'attr':{'class':'col-12 d-flex flex-wrap justify-content-center pt-5'}}) }}
    {#  {{ form_widget(sortieForm) }}#}
        <div class="d-flex justify-content-center col-12">
            <div class="d-flex flex-column py-2 px-5 col-4">
                {{ form_row(sortieForm.nom) }}
                {{ form_row(sortieForm.dateHeureDebut) }}
                {{ form_row(sortieForm.dateLimiteInscription) }}
                {{ form_row(sortieForm.nbInscriptionsMax) }}
                {{ form_row(sortieForm.duree) }}
                {{ form_row(sortieForm.infosSortie) }}
            </div>
            <div class="d-flex flex-column py-2 px-5 col-4">
                {% if (id != 0) %}
                {{ form_row(sortieForm.siteOrganisateur) }}
                {% else %}
                    <div class="d-flex col-12 py-2"><p class="col-6 mb-0">Campus :</p><p class="col-5 offset-1 mb-0">{{ app.user.campus }}</p></div>
                {% endif %}
                {{ form_row(sortieForm.lieuSortie) }}
                <div class="d-flex col-12 py-2"><p class="col-6 mb-0">Rue :</p><p class="col-5 offset-1 mb-0">{{ 'X XXX XXXXXXXX' }}</p></div>
                <div class="d-flex col-12 py-2"><p class="col-6 mb-0">Code postal :</p><p class="col-5 offset-1 mb-0">{{ 'XXXXX' }}</p></div>
                <div class="d-flex col-12 py-2"><p class="col-6 mb-0">Latitude :</p><p class="col-5 offset-1 mb-0"></p></div>
                <div class="d-flex col-12 py-2"><p class="col-6 mb-0">Longitude :</p><p class="col-5 offset-1 mb-0"></p></div>
            </div>
        </div>
        <div class="d-flex justify-content-evenly col-8 pt-5 px-5">
            {{ form_row(sortieForm.enregistrer) }}
            {{ form_row(sortieForm.publier) }}
            {% if id != 0 %}
                {{ form_row(sortieForm.delete) }}
            {% endif %}
            <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg">Annuler</a>
        </div>
    {{ form_end(sortieForm) }}
{% endblock %}